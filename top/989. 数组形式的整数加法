class Solution {
    public List<Integer> addToArrayForm(int[] num, int k) {
        List<Integer> res = new ArrayList<Integer>();
        int n = num.length;
        for (int i = n - 1; i >= 0; --i) {
            int sum = k%10+num[i];
            k = k/10;
            if(sum>=10){
                k++; //k代替进位
                sum-=10;
            }
            res.add(sum);
        }
        for(;k>0;k=k/10){ //k还有全加上
            res.add(k%10);
        }
        Collections.reverse(res);
        return res;
    }
}
while ( A 没完 || B 没完)
    A 的当前位
    B 的当前位

    和 = A 的当前位 + B 的当前位 + 进位carry

    当前位 = 和 % 10;
    进位 = 和 / 10;

判断还有进位吗

//递归获取数字每一位
void method(int n)
{
	if (n>9)
	{
		method(n / 10);

	}
	printf("%d", n % 10);
	
}
int main()
{
	method(123567890);
	system("pause");
	return 0;
}
