//线性时间选择--随机取划分元
class Solution {
   public int findKthLargest(int[] nums, int k) {

        return select(nums,0,nums.length-1,k);
    }
     public int select(int[] a, int l, int r, int k){
        if(l==r) return a[l];
        int index = randPartion(a,l,r);
        int leftsize = index-l+1;
        int rightsize = r-l+1-leftsize;
        if(rightsize<k) return select(a,l,index,k-rightsize);
        else return select(a,index+1,r,k);
    }
    
    public int randPartion(int[] a, int l, int r){
        int x = new Random().nextInt(r - l + 1) + l;
        int i=l,j=r,tmp=a[x];
        swap(a,l,x);
        while(i<j){ //正确写法
            while(a[j]>=tmp&&i<j)
                j--;
            a[i]=a[j];
            while(a[i]<=tmp&&i<j)
                i++;
            a[j]=a[i];
        }
        a[j]=tmp;
        return j;
    }
    public void swap(int[] a,int i, int j){
        int tmp = a[j];
        a[j]=a[i];
        a[i]=tmp;
    }
}
//手写堆排序--大根堆
//建堆：循环n次，每次调整o(log n)，故最好、最坏、平均情况下：o(n*logn);
//refer https://www.cnblogs.com/sidewinder/p/13733329.html
class Solution {
   int[] a;
   int heapSize=0;
   public int findKthLargest(int[] nums, int k) {
        a = nums;
        heapSize = nums.length;
        for(int i=(heapSize-2)/2;i>=0;i--){ //最后一个非叶子节点是(heapSize-2)/2
            buildDown(i);
        }
        for(int i=0;i<k-1;i++){
            pop(i);
        }
        return a[0];
    }
    public void buildDown(int k){ //向下建立堆结构
        if(heapSize==1||k>(heapSize-2)/2) //k超过最后一个叶子结点，停止
            return;
        int left = k*2+1, right = k*2+2, largest = left; //左右孩子对应k*2+1， k*2+2
        if(right<heapSize && a[right]>a[left]) //注意right可能越界1个元素
            largest = right;
        if(a[k]<a[largest]){
            swap(k,largest);
            buildDown(largest);
        }
    }
    public void poll(){ //pop堆顶，然后向下重建堆结构
        swap(0,heapSize-1);//将堆顶元素交换到最后
        heapSize--;//使堆顶元素失效
        buildDown(0);//重新向下建立
    }
     public void adjustUp(int k){//向上建立堆结构
            if(k < 0) //遍历到0下一次递归到负数
                return;
            int left = 2 * k + 1, right = 2 * k +2, largest = left;
            if(right < heapSize && a[right] > a[left]){
                  largest  = right;
            }
            if(a[largest] > a[k]){
                swap(largest, k);
                adjustUp((k-1)/2); //k节点的父亲节点是(k-1)/2
            }
    }
    public void offer(int value) {
            a[heapSize++] = value; //添加到数组
            adjustUp((heapSize-2)/2); //从底（最后一个叶子结点）向上重建堆结构
        }
        
     // 排序只需要一直删除堆顶元素， 放到堆末尾;
     public void sort(){
          for(int i = 0; i < a.length; i++){
              poll(); //元素从大到小poll被poll出来
          }
     }
    public void swap(int i, int j){
        int tmp = a[j];
        a[j]=a[i];
        a[i]=tmp;
    }
}
//调用库函数实现堆排序
class Solution {
   PriorityQueue<Integer> pq = new PriorityQueue<>(); //java优先队列采用堆实现，默认是小根堆，可以new Comparator自定义。线程不安全，安全：PriorityBlockingQueue
   public int findKthLargest(int[] nums, int k) {
        for(int i=0;i<nums.length;i++){
            pq.offer(nums[i]);
            if(pq.size()>k){
                pq.poll();
            }
        }
        return pq.peek();
    }
}
//线性时间选择--中位数解法
class Solution {
   public int findKthLargest(int[] nums, int k) {

        return select(nums,0,nums.length-1,k);
    }
    public int select(int[] a, int p, int r, int k){
        if (r-p<5) {
            Arrays.sort(a,p,r+1);//sort 排序从p排序到r而并不是r+1
            return a[r-k+1];
        };
        for(int i=0;i<=(r-p-4)/5;i++){
            Arrays.sort(a,p+i*5,p+i*5+4);
            int med=p+i*5+2;
            swap(a,p+i,med); //各组中位数交换到数组前面的位置
        }
        int x = select(a, p, p+(r-p-4)/5, (r-p+1)/10);
        int i=partition(a,p,r, x);
        int j=r-i+1;  //划分元+划分元右边元素个数
        if (k<=j) return select(a,i,r,k);//在右边，k不变
        else return select(a,p,i-1,k-j);//在右边，k变为k-j
    }
   public int partition(int[] a,int p,int r,int val)
    {
        int pos=0;
        for(int q=p; q<=r; q++)
        {
            if(a[q]==val)
            {
                pos=q;
                break;
            }
        }
        swap(a,p,pos);

        int i=p,j=r+1,x=a[p];
        while(true)   //写法有问题？
        {
            while(a[++i]<x&&i<r);
            while(a[--j]>x);
            if(i>=j)break;
            swap(a,i,j);
        }
        a[p]=a[j];
        a[j]=x;
        return j;
    }
    public void swap(int[] a, int i, int j){
        int tmp = a[j];
        a[j]=a[i];
        a[i]=tmp;
    }
}
